
@{
    ViewBag.Title = "Update_req";
}

<html>
<head>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @{
        foreach (System.Data.DataRow dr in ViewBag.sliderRec.Rows)
        {


            <form method="post">
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">title</label>
                    <div class="col-sm-9">
                        <input type="text" value="@dr["ImageTitle"]" name="ImageTitle" class="col-xs-10 col-sm-8" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">Description</label>
                    <div class="col-sm-9">
                        <input type="text" value="@dr["ImageDescription"]" name="ImageDescription" class="col-xs-10 col-sm-8" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">ImagePath</label>
                    <div class="col-sm-9">
                        <input type="text" value="@dr["ImagePath"]" name="ImagePath" class="col-xs-10 col-sm-8" />
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-sm-9">
                        <input type="submit" value="submit" class="btn btn-primary" />
                    </div>
                </div>
            </form>

        }
    }

</body>
</html>

