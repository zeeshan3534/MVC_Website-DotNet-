@{
    ViewBag.Title = "Home Page";
}

@Session["var4"]
@{
    List<object> AuthorList = new List<object>();

    //var imagetitle = "";
    foreach (System.Data.DataRow i in ViewBag.emp.Rows)
    {
        AuthorList.Add(@i["ImageTitle"]);
        AuthorList.Add(@i["ImageDescription"]);
        AuthorList.Add(@i["ImagePath"]);
    }
}

