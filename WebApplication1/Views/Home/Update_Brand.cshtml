
@{
    ViewBag.Title = "Update_Brand";
}

<h2>Update_Brand</h2>

@{
    foreach (System.Data.DataRow dr in ViewBag.brandrecord.Rows)
    {


<form method="post">
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right">ProductName</label>
        <div class="col-sm-9">
            <input type="text" value="@dr["ProductName"]" name="ProductName" class="col-xs-10 col-sm-8" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right">CategoryId</label>
        <div class="col-sm-9">
            <input type="text" value="@dr["CategoryId"]" name="CategoryId" class="col-xs-10 col-sm-8" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right">IsActive</label>
        <div class="col-sm-9">
            <input type="text" value="@dr["IsActive"]" name="IsActive" class="col-xs-10 col-sm-8" maxlength="1" />
        </div>

    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right">Description</label>
        <div class="col-sm-9">
            <input type="text" value="@dr["Description"]" name="Description" class="col-xs-10 col-sm-8" />
        </div>

    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right">ProductImage</label>
        <div class="col-sm-9">
            <input type="text" value="@dr["ProductImage"]" name="ProductImage" class="col-xs-10 col-sm-8" />
        </div>

    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right">Quantity</label>
        <div class="col-sm-9">
            <input type="text" value="@dr["Quantity"]" name="Quantity" class="col-xs-10 col-sm-8" />
        </div>

    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right">Price</label>
        <div class="col-sm-9">
            <input type="text" value="@dr["Price"]" name="Price" class="col-xs-10 col-sm-8" />
        </div>

    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right">Featured</label>
        <div class="col-sm-9">
            <input type="text" value="@dr["Featured"]" name="Featured" class="col-xs-10 col-sm-8" />
        </div>

    </div>
    <div class="form-group">
        <div class="col-sm-9">
            <input type="submit" value="submit" class="btn btn-primary" />
        </div>
    </div>
</form>

    }
}